<Window x:Class="podgotovka.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podgotovka"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="323*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="339*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="Aqua" ></Grid>
        <Grid Grid.Row="3" Background="Aqua"  Grid.ColumnSpan="3"  ></Grid>
        <TextBlock Text="Company" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Height="40" Width="126"/>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,74,0,0" Grid.RowSpan="2">
            <Button Content="User" VerticalAlignment="Center" Width="100" Height="30" Margin="20" Click="User_click"></Button>

        </StackPanel>

        <Frame Grid.Row="1" Grid.Column="1" x:Name="MainFrame"></Frame>

    </Grid>
</Window>
